// ******************************************************

// HEADER

#header
  position: fixed
  width: 100%
  z-index: 1000

#main-content
  padding-top: 57px + $margin-basic
  min-height: 75vh

#header-main-wrapper
  background-image: url('../img/dist/novara-marble-black-cropped.jpg')
  background-size: cover
  background-position: center center

.header-menu
  li
    padding-right: $margin-tiny

#menu-logo
  margin-right: 10px
  svg
    height: 20px
    width: 24px
    vertical-align: text-bottom
    margin-bottom: -2px

#header-logotype
  svg
    height: 17px
    width: 125px
    vertical-align: text-bottom

#header-sub
  display: none

// SEARCH

#header-search
  display: none

#search-form
  border: $border-width solid $color-white-soft

#search-input, #search-submit
  font-size: $font-size-h3
  border: 0
  &:focus
    outline: 0

#search-input
  float: left
  width: 70%
  background-color: transparent
  color: $color-white-soft

#search-submit
  width: 8%
  min-width: 25px
  float right

#tag-suggestions
  display: none

// ******************************************************

// 404

.error404
  #header-search
    display: block

// ******************************************************

// SUPPORT SECTION

.support-form-holder
  min-height: 5rem
  padding: $margin-small
  text-align: center
  border: 2px solid white

.support-form-slider
  width: 70%
  margin-right: 2%

.support-form-submit
  width: 12%
  margin-left: 2%
  padding: $margin-tiny $margin-small
  background-color: white
  color: $color-red
  font-weight: bold
  border: 0

// ******************************************************

// RADIO PLAYER

#radio-player
  display: none

.jp-controls-holder
  margin-right: $margin-tiny

.jp-block
  display: block
  height: $margin-basic
  width: 100%
  text-align: center
  border: 2px solid $color-white-soft

.jp-button
  text-align: center

.jp-stop
  display: none

.jp-volume-bar
  position: relative

.jp-button, .jp-volume-bar
  &:hover
    cursor: pointer

.jp-volume-bar-value
  background-color: white
  position:relative
  height: 100%

// ******************************************************

// FRONT PAGE

#featured-post
  position: relative

#featured-post-title
  position: absolute
  top: 0
  height: 100%
  width: 100%
  z-index: 100
  padding: $margin-large
  font-size: golden-ratio(1rem , 2.5)

// ******************************************************

// INDEXES

.post-col12-image
  position: relative

.post-col12-text
  position: absolute
  bottom: 0
  left: 0
  padding: $margin-small + $margin-tiny
  background-image: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 20%,rgba(0,0,0,0.65) 100%);


// ******************************************************

// SINGLE

#header-page-title
  max-width: 70%

#single-resources-section
  display: none

  // ARTICLE

#single-article-photo-caption
  position: absolute
  top: 0
  right: ($gutter / 2)
  writing-mode: vertical-rl
  padding: $margin-micro

  // LIVEBLOG

.text-copy
  .liveblog-update-heading
    border-top: 1px solid $color-black-soft
    padding-top: $margin-basic
    margin-top: $margin-mid
    margin-bottom: $margin-small
    &:first-of-type
      margin-top: $margin-basic